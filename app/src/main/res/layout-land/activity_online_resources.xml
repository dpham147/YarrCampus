<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_online_resources"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.yarrcampus.OnlineResourcesActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openOccMainWebsite">

        <TextView
            android:text="@string/occ_website"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/occ_logo"
            android:id="@+id/imageView"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openMyoccWebsite">

        <TextView
            android:text="@string/my_occ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/s_logo"
            android:id="@+id/imageView2"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openBlackboardWebsite">

        <TextView
            android:text="@string/blackboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/blackboard"
            android:id="@+id/imageView3"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openCanvasWebsite">

        <TextView
            android:text="@string/canvas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/canvas_logo"
            android:id="@+id/imageView4"
            android:layout_weight="0" />
    </LinearLayout>
</LinearLayout>
