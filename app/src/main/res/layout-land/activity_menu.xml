<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.yarrcampus.MenuActivity"
    android:columnCount="3"
    android:layout_columnWeight="1"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollIndicators="right"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buildingMapsMenuLinearLayout"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openBuildingSearchActivity">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/buildingMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false" />

        <TextView
            android:text="@string/building_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/professorMenuLinearLayout"
        android:layout_marginBottom="5dp"
        android:onClick="openProfessorSearchActivity">

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/occ_pirate_logo"
            android:id="@+id/professorMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_height="50dp" />

        <TextView
            android:text="@string/professor_search_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/professorMenuTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/utilitiesMenuLinearLayout"
        android:layout_marginBottom="5dp"
        android:onClick="openUtilitySearchActivity">

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/maps_icon"
            android:id="@+id/utilitiesMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_height="50dp" />

        <TextView
            android:text="@string/utility_search_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/utilitiesMenuTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/coursesMenuLinearLayout"
        android:layout_marginBottom="5dp"
        android:onClick="openCourseSearchActivity">

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/courses_icon"
            android:id="@+id/coursesMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_height="50dp" />

        <TextView
            android:text="@string/courses_search_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/coursesMenuTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callContactMenuLinearLayout"
        android:background="?attr/colorButtonNormal"
        android:layout_marginBottom="5dp"
        android:onClick="openCallContactActivity">

        <ImageView
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/phone"
            android:adjustViewBounds="false"
            android:id="@+id/callContactImageView"
            android:layout_width="50dp" />

        <TextView
            android:text="@string/campus_contacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_weight="3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/faqMenuLinearLayout"
        android:layout_marginBottom="5dp"
        android:onClick="openFaqActivity">

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/faq_icon"
            android:id="@+id/faqMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_height="50dp" />

        <TextView
            android:text="@string/faq_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/faqMenuTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/contactMenuLinearLayout"
        android:layout_marginBottom="5dp"
        android:onClick="openContactActivity">

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/contact_icon"
            android:id="@+id/contactMenuImageView"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_height="50dp" />

        <TextView
            android:text="@string/contact_us_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/contactMenuTextView" />
    </LinearLayout>


</GridLayout>
</ScrollView>